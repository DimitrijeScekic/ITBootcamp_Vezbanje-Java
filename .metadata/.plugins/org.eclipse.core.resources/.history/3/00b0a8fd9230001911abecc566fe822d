package glavni;

import java.util.Scanner;

public class Krug {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		double r, pi, povrsina ;
		
		System.out.println(" Unesite poluprecnik :");
		r=sc.nextDouble();
		
		pi=3.14;
		povrsina = r*r*pi;
				
				System.out.println("Povrsina kruga je:" + povrsina );

	}

}
