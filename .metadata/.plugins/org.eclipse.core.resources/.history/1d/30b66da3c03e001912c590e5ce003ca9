package klaseV;

public class Racun {

	private String brojRacuna;
	private double stanje;
	
	public Racun(String brojRacuna, double stanje) {
		this.brojRacuna = brojRacuna;
		this.stanje = stanje;
	}

	public String getBrojRacuna() {
		return brojRacuna;
	}

	public void setBrojRacuna(String brojRacuna) {
		this.brojRacuna = brojRacuna;
	}

	public double getStanje() {
		return stanje;
	}

	public void setStanje(double stanje) {
		this.stanje = stanje;
	}
	
	public void dodajNovac(double iznos) {
		if(iznos>0) {
			this.stanje+=iznos;
		}
	}
	public void uzmiNovac(double iznos) {
		if(this.stanje<iznos || iznos<=0)
	return ;
		this.stanje-=iznos;
	}
	public String uzmiPodatke() {
		return " Broj racuna:" + this.brojRacuna + "," + this.stanje + "," ;
	}
}
